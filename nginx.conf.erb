worker_processes 1;
error_log stderr;
pid nginx.pid;
daemon off;

events {
  worker_connections 768;
}

http {
  types_hash_max_size 2048;
  include mime.types;
  server {
    listen <%= ENV["PORT"] %>;
    server_name  _;
    root /app/www;
    index index.html;

    port_in_redirect off;

    location ~ ^/.well-known/(.*)$
    {
      alias /app/www/well-known/$1;
    }

    location = /about {
      return 307 /;
    }
 }
}
